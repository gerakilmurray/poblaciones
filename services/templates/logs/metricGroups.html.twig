{% extends "adminLayout.html.twig" %}
{% import "macros.html.twig" as macros %}

{% set menu = 'CATEGORIES' %}

{% block content %}

{{ macros.Title('Categorías') }}

{{ include('tabbedContentMenu.html.twig') }}
<div class="contenedorAdmin">

<script type="text/javascript">
    function deleteItem(url) {
        if (!confirm('Se procederá a eliminar el elemento seleccionado.\n\n¿Está seguro de que desea hacer esto?'))
            return false;
        document.location = url;
        return false;
    }
</script>
    <div style="padding-top: 20px;padding-bottom: 10px;">
    <a href="{{ new_url }}">Nueva Categoría</a>
    </div>
	<div class="dTableHeader">
		<div style='padding-top: 0px' class='dCellStartRowS2 dTableHeader'>Nombre</div>
		<div class='dCellSize2b Center dTableHeader'>Acciones</div>
	</div>
	{% for metricGroup in metricGroups %}
	    <div class='dCellStartRowS2'><a href='{{ metricGroup.edit_url}}'>{{ metricGroup.caption | raw }}</a></div>
	    <div class='dCellSize2b Center'><a href='{{ metricGroup.edit_url}}'>Editar</a>
                    <a href="#" onclick="return deleteItem('{{ metricGroup.delete_url}}');">Borrar</a></div>
	{% else %}
        <div class='dBlockNewLineS1'>
        No hay información disponible.
        </div>
	{% endfor %}
	<div class='dBlockNewLineS3'><br></div>

	<div class='dText'>Total: {{ metricGroups | length }} categorías.</div>
	<div class='dBlockNewLineS3'></div>
</div>

{% endblock %}

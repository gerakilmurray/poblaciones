{% extends "adminLayout.html.twig" %}
{% import "macros.html.twig" as macros %}

{% set menu = 'INSTITUTIONS' %}

{% block content %}

{{ macros.Title('Instituciones') }}

{{ include('tabbedContentMenu.html.twig') }}
<div class="contenedorAdmin">

<script type="text/javascript">
    function deleteItem(url) {
        if (!confirm('Se procederá a eliminar el elemento seleccionado.\n\n¿Está seguro de que desea hacer esto?'))
            return false;
        document.location = url;
        return false;
    }
</script>
    <div style="padding-top: 20px;padding-bottom: 10px;">
    <a href="{{ new_url }}">Nueva institución</a>
    </div>
	<div class="dTableHeader">
		<div style='padding-top: 0px' class='dCellStartRowS3 dTableHeader'>Nombre</div>
		<div class='dCellSize2 Center dTableHeader'>Teléfono</div>
		<div class='dCellSize2 Center dTableHeader'>Correo electrónico</div>
		<div class='dCellSize2b Center dTableHeader'>Acciones</div>
	</div>
	{% for institution in institutions %}
	    <div class='dCellStartRowS3'><a href='{{ institution.edit_url}}'>{{ institution.caption }}</a></div>
	    <div class='dCellSize2 Center'>{{ institution.phone }}</div>
	    <div class='dCellSize2 Center'>{{ institution.email }}</div>
	    <div class='dCellSize2b Center'><a href='{{ institution.edit_url}}'>Editar</a>
                    <a href="#" onclick="return deleteItem('{{ institution.delete_url}}');">Borrar</a></div>
	{% else %}
        <div class='dBlockNewLineS1'>
        No hay información disponible.
        </div>
	{% endfor %}
	<div class='dBlockNewLineS3'><br></div>

	<div class='dText'>Total: {{ institutions | length }} instituciones.</div>
	<div class='dBlockNewLineS3'></div>
</div>

{% endblock %}
